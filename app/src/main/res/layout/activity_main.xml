<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:background="#f00"
        android:layout_width="match_parent"
        android:layout_height="200dp">
       <RelativeLayout
           android:id="@+id/oneb"
           android:layout_width="wrap_content"
           android:layout_height="70dp">
           <ImageView
               android:id="@+id/jdg"
               android:src="@mipmap/jdg"
               android:layout_width="70dp"
               android:layout_height="70dp" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_marginLeft="0dp"
               android:layout_marginBottom="0dp"
               android:layout_toRightOf="@id/jdg"
               android:text="京东"
               android:textColor="#F5F1F1"
               android:textSize="30dp"
               android:textStyle="bold" />
       </RelativeLayout>
        <LinearLayout
            android:layout_below="@id/oneb"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:src="@mipmap/shop01"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/shop02"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/shop03"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/llone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv1"
            android:src="@mipmap/shop05"
            android:layout_width="100dp"
            android:layout_height="100dp" />
       <LinearLayout
           android:layout_marginLeft="20dp"
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="match_parent">
           <TextView
               android:text="新西兰CRIA 儿童六层纱布毛巾被炫彩五角星"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:textColor="#f00"
               android:layout_marginTop="40dp"
               android:text="￥169"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>

    </LinearLayout>
    //two
    <LinearLayout
        android:id="@+id/lltwo"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv2"
            android:src="@mipmap/shop06"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="日本AITO KATACHI花姿形花瓣皿M花瓣点心碟餐碟"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#f00"
                android:layout_marginTop="40dp"
                android:text="￥139"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/shop07"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="肌肤之钥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="￥1680"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        //four
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/shop08"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="新西兰CRIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="￥499"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>




</LinearLayout>